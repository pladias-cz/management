# See https://editorconfig.org for format details
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = tab
tab_width = 4

[{*.json, *.yaml, *.yml, *.md}]
indent_style = space
indent_size = 2

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab